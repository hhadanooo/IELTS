<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Test.ActivityTestWrite"
    android:background="@drawable/background">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/activity_test_Write_rel_body"
        android:background="@color/colorPrimary">

        <ImageView
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:id="@+id/activity_test_write_actionbar_img_icon_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:background="@drawable/icon_arrow_back"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true">
            <ImageView
                android:layout_marginTop="10dp"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/activity_test_write_img_body"

                android:layout_alignParentTop="true"/>


            <TextView
                android:layout_marginTop="10dp"
                android:layout_alignTop="@id/activity_test_write_img_body"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/activity_test_write_tv1_about_icon"
                android:layout_toRightOf="@id/activity_test_write_img_body"

                android:textStyle="bold"
                android:fontFamily="sans-serif"/>
            <TextView
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/activity_test_write_img_body"
                android:layout_alignBottom="@id/activity_test_write_img_body"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/activity_test_write_tv2_about_icon"
                android:layout_below="@id/activity_test_write_tv1_about_icon"

                android:textColor="#8A7D7D"/>
        </RelativeLayout>

    </RelativeLayout>




    <RelativeLayout
        android:id="@+id/activity_test_write_rel_main_page"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/dorw_background_customviewitem"
        android:layout_below="@id/activity_test_Write_rel_body"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp">


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:background="@color/colorPrimary"
            android:id="@+id/activity_test_write_rel_title_main_page">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:id="@+id/activity_test_write_tv_title_main_page"/>
        </RelativeLayout>


    </RelativeLayout>


</RelativeLayout>