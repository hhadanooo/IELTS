<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Test.ActivityTestRead"
    android:background="@drawable/background">

    <RelativeLayout
        android:id="@+id/activity_test_read_rel_body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Activity_test_read_iv_arrowBack_SimpleText"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_margin="7dp"
            android:src="@drawable/icon_arrow_back"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:padding="3dp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/Activity_test_read_iv_ic_logoPage_SimpleText"
                android:background="@drawable/test_menue"
                android:layout_gravity="center_horizontal"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal"
                android:textColor="#000"
                android:id="@+id/Activity_test_read_tv_TitleLogo_SimpleText"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:id="@+id/Activity_test_read_tv_PathLogo_SimpleText"
                android:layout_marginBottom="10dp"/>

        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/activity_test_read_lin_tab"
        android:layout_marginTop="10dp"
        android:layout_below="@id/activity_test_read_rel_body"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerInParent="true"
        android:orientation="vertical"

        android:background="@drawable/dorw_background_customviewitem">

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/activity_test_read_tab_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/draw_background_lin_tab_layout"
            />

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/activity_test_read_view_pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </LinearLayout>


</RelativeLayout>